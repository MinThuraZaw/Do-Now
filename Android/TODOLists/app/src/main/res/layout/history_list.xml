<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.thurazaw.todolists.activities.MainActivity">

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/btn_delete_history"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_desc"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"
            tools:text="Description" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_date"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            tools:text="11/11/1111" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_delete_history"
        android:src="@drawable/ic_delete_red_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_below="@id/layout_one"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:layout_height="1px"/>

</RelativeLayout>